@{
    ViewData["Title"] = "AddProductS2";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<head>
    <link href="~/startbootstrap-sb-admin-2-gh-pages/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/startbootstrap-sb-admin-2-gh-pages/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<style>
    .product-card {
        width: 900px;
        height: auto;
        border-radius: 15px;
        background-color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 0 auto;
    }

    .info-text {
        position: relative; /* Pseudo-element için gerekli */
        padding-left: 20px; /* Noktanın görünmesi için soldan boşluk */
        color: black; /* Metin rengi */
        display: flex;
    }

        .info-text::before {
            content: '';
            position: absolute;
            left: 0; /* Solda yerleştir */
            top: 50%; /* Dikey olarak ortala */
            transform: translateY(-50%); /* Gerçekten ortalamak için */
            width: 8px; /* Noktanın genişliği */
            height: 8px; /* Noktanın yüksekliği */
            background-color: #E85C0D; /* Tütün rengi */
            border-radius: 50%; /* Yuvarlak nokta */
        }

    .image-placeholder {
        width: 220px;
        height: 200px;
        margin-left: 30px;
        background-color: #e0e0e0;
        border-radius: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
        overflow: hidden;
        position: relative;
    }

        .image-placeholder img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Görüntüyü tam olarak kutuya sığdırır */
            object-position: center; /* Görüntüyü ortalar */
            border-radius: 10px;
        }

    #imageUpload {
        width: 100%;
        height: 100%;
        opacity: 0;
        position: absolute;
        top: 0;
        left: 0;
        cursor: pointer;
    }

    .rounded-textbox {
        border-radius: 10px;
        border: 1px solid #ccc;
        padding: 5px;
        width: 200px;
        box-sizing: border-box;
        margin-left: 10px;
    }

    .date-picker {
        width: 200px;
        margin-left: 10px;
        border-radius: 5px;
    }

    /* Tüm inputları aynı hizaya getirmek için flex düzeni */
    .form-group {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

        .form-group label {
            width: 150px; /* Etiket genişliği, yazıların hizalanması için */
            display: flex;
        }

    /* Renk paleti için yan yana düzen */
    .color-picker-container {
        display: flex;
        gap: 10px; /* Renk kutuları arasındaki boşluk */
        margin-top: 10px;
    }

    .color-option {
        width: 20px; /* Daire boyutu */
        height: 20px;
        border-radius: 50%; /* Daire yapısı */
        border: 2px solid transparent; /* Sınır */
        display: flex;
        margin-right: 10px; /* Sağa boşluk */
        margin-bottom: 10px;
    }

     
        .more-colors {
        font-family:  'San Francisco', Helvetica, Arial, san-serif; /* Yazı tipi */
        font-size: 30px; /* Yazı boyutu */
        text-align: center; /* Yazıyı ortalamak için */
        color: #333; /* Yazı rengi, isteğe göre ayarlayın */
        margin: 0; /* Varsayılan margin’i kaldırın */
       }
       .Card-For-Colors{
        width: 900px;
        height: auto;
        border-radius: 15px;
        background-color: #5F6F65;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 0 auto;
       }

    .container-For-Color {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        border-radius: 15px;
    }

    .palette {
        display: flex;
        flex-wrap: wrap;
        width: auto;
        height: auto;
        max-width: 770px;
        background: #e8e8f3;
        position: relative;
        padding: 10px;
        border-radius: 20px;
        margin: 40px;
        box-shadow: 7px 7px 15px rgba(55, 84, 170, 0.15), -7px -7px 20px rgba(255, 255, 255, 1), inset 0px 0px 4px rgba(255, 255, 255, 0.2), inset 7px 7px 15px rgba(55, 84, 170, 0), inset -7px -7px 20px rgba(255, 255, 255, 0), 0px 0px 4px rgba(255, 255, 255, 0) !important;
    }

    .palette-name {
        position: absolute;
        right: 40px;
        bottom: 50px;
        font-size: 25px;
        color: #969595;
    }

    .a_palette_color {
        width: 64px;
        height: 64px;
        background: red;
        display: inline-block;
        margin: 14px;
        border-radius: 50%;
        box-shadow: 7px 7px 15px rgba(55, 84, 170, 0.15), -7px -7px 20px rgba(255, 255, 255, 1), inset 0px 0px 4px rgba(255, 255, 255, 0.2), inset 7px 7px 15px rgba(55, 84, 170, 0), inset -7px -7px 20px rgba(255, 255, 255, 0), 0px 0px 4px rgba(255, 255, 255, 0) !important;
        cursor: pointer;
    }

    .switch-container {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .switch {
        position: relative;
        display: inline-block;
        width: 40px;
        height: 20px;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 34px;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 16px;
            width: 16px;
            left: 2px;
            bottom: 2px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

    input:checked + .slider {
        background-color: #4caf50;
    }

        input:checked + .slider:before {
            transform: translateX(20px);
        }

    .round {
        border-radius: 34px;
    }

    .button-container {
        display: flex;
        justify-content: center; /* Yatayda ortalar */
        align-items: center; /* Dikeyde ortalar */
    }

    .container {
        display: flex;
        gap: 5px; /* Checkbox'lar arasında 5px boşluk */
        flex-wrap: nowrap;
        align-items: center;
        padding-bottom: 10px;
    }

    .checkbox-container {
        display: flex;
        margin: 0;
        padding: 0;
    }

    .checkbox-btn {
        position: relative;
        width: 50px; /* Kutucuk genişliği */
        height: 50px; /* Kutucuk yüksekliği */
    }

        .checkbox-btn input[type="checkbox"] {
            opacity: 0;
            position: absolute;
            width: 100%;
            height: 100%;
            cursor: pointer;
            z-index: 2;
        }

        .checkbox-btn label {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            padding: 8px 12px;
            border: 2px solid #ddd;
            border-radius: 6px;
            background: white;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 14px;
            box-sizing: border-box;
            white-space: nowrap;
        }

        .checkbox-btn input[type="checkbox"]:checked + label {
            border-color: #4CAF50;
            box-shadow: 0 0 10px rgba(76, 175, 80, 0.5);
            background: #f8fff8;
        }

        .checkbox-btn:hover label {
            border-color: #4CAF50;
        }

    .custom-input {
        width: 50px;
        border-radius: 15px;
        padding: 5px; /* Eğer padding istersen */
    }

    .info-text {
        display: inline-block;
        margin-bottom: 5px;
    }
</style>

