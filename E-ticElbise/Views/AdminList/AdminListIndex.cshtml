@model List<EntityLayer.Concrate.Admin>
@{
    ViewData["Title"] = "AdminListIndex";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int i = 1;

}


<h1 class="h3 mb-0 text-gray-800">Yöneticiler Listesi</h1>
<br />
<br />
<table class="table table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col">Sıra</th>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">Mail Adresi</th>
            <th scope="col">Telefon Numarası</th>
            <th scope="col">Adresi</th>
            <th scope="col">Yöneticiyi Sil</th>
            <th scope="col"> Yöneticiyi Güncelle</th>
        </tr>
    </thead>
    <tbody>
        
            @foreach(var item in Model)
            {
                
            <tr>
                <th scope="row">@i</th> 
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td>@item.MailAdress</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Adress</td>
                <td><a href="/AdminList/DeleteAdminFromList/@item.AdminId" class="btn btn-danger">Sil</a></td>
                <td><a href="/AdminList/EditAdmin/@item.AdminId" class="btn btn-success">Güncelle</a></td>
            </tr>
            i++;
        }
          
    </tbody>
</table>

